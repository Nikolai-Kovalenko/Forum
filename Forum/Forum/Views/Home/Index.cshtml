@model Forum.Models.ViewModels.HomeVM

<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach (var obj in Model.Sections)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@obj.Name.Replace(' ', '_')">
                @obj.Name
            </button>
        }
    </div>

    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <tread>
            <tr>
                <th style="width: 60%;">
                    Title
                </th>
                <th style="width: 15%;">
                    Create time
                </th>
                <th style="width: 10%;">
                    Other details
                </th>
                <th style="width: 15%;">
                    Last Commment
                </th>
            </tr>
    </table>

    <div class="row">
        @foreach (var prod in Model.Topics)
        {
            if (prod.DeleteTime == null)
            {
                <partial name="_IndividualTopicCard" model="prod" />
                //display all active Topic
            }
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $(".filter-button").click(function () {

                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $(".filter").not('.' + value).hide();
                    $('.filter').filter('.' + value).show();

                }
            });

        });
    </script>
}
