@model Forum.Models.Dto.TopicDeleteDTO

<form method="post">

     <input asp-for="@Model.Id" hidden />

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Topic</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="@Model.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Name" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="@Model.SectionId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Section.Name" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="@Model.Description."></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="@Model.Description" disabled class="form-control summernote"></textarea>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" asp-action="DeletePost" class="btn btn-danger w-100">Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100"> <i class="fas fa-sign-out-alt"></i> &nbsp; Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>  
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}