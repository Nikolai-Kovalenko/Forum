@model IEnumerable<Forum.Models.Topic>

<div class="conteiner p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Topic List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Topic" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-square"></i> Create new Topic</a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <tread>
                <tr>
                    <th>
                        Topic Name
                    </th>
                    <th>
                        Sectioc Type
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Create Time
                    </th>
                    <th>
                        Last Change Time
                    </th>
                    <th></th>
                </tr>
            </tread>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td wight="15%">@obj.Name</td>
                        <td wight="15%">@obj.Section.Name</td>
                        <td wight="20%">@obj.Description</td>
                        <td wight="20%">@obj.CreateTime</td>
                        <td wight="20%">@obj.LastChangeTime</td>
                        <td class="text-center">
                            <div class="w-55 btn-group" role="group">
                                <a asp-controller="Section" asp-route-Id="@obj.Id" asp-action="Update" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-controller="Section" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Topic exists.</p>
    }

</div>

