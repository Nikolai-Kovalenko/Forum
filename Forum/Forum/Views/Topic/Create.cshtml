@model Forum.Models.ViewModels.TopicVM

<form method="post" asp-action="Create">
    <div class="border p-3 bg-white">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Add topic</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="@Model.Topic.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Topic.Name" class="form-control" />
                        <span asp-validation-for="@Model.Topic.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="@Model.Topic.SectionId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.Topic.SectionId" 
                            asp-items="@Model.SetionSelectList" class="form-select">
                            <option disabled selected>--Select Section--</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="@Model.Topic.Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.Topic.Description" class="form-control" />
                        <span asp-validation-for="@Model.Topic.Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100"><i class="fas fa-sign-out-alt"></i>  &nbsp; Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}