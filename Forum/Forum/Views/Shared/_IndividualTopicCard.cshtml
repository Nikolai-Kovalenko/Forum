@model Forum.Models.Topic

<div class="col-lg-12 col-md-6 pb-2 filter @Model.Section.Name.Replace(' ', '_')">

    <table class="table table-bordered table-striped" style="width:100%">
        <tbody>
            <tr>
                <td style="width: 70%;">
                    <!-- Card-->
                    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
                        <div class="card-body px-3 pt-1 pb-1 row">
                            <a asp-controller="Topic" asp-action="ViewDeteils" asp-route-id="@Model.Id" class="col-7"><label class="float-left">@Model.Name</label></a>
                        </div>

                        <div class="card-body p-1 px-3 row">
                            <div class="col-4">
                                <span class="badge p-2 border w-100 text-dark" style="background-color:lavenderblush">@Model.Section.Name</span>
                            </div>
                            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                                <p> @Model.Description</p>
                            </div>
                        </div>

                    </div>
                </td>

                <td style="width: 15%;">@Model.CreateTime</td>
                <td style="width: 15%;">Last Commment</td>

            </tr>
        </tbody>
    </table>

</div>