@model IEnumerable<Forum.Models.Section>

<div class="conteiner p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Section List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Section" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create new Section
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <tread>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th>
                        Create Time
                    </th>
                    <th></th>
                </tr>
            </tread>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td wight="50%">@obj.Name</td>
                        <td wight="30%">@obj.Description</td>
                        <td wight="30%">@obj.CreateTime</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Section" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Section" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Section exists.</p>
    }

</div>

